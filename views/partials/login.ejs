<div class="page">
  <h2 class="heading-1">Login</h2>
  <form ng-submit="login(email,password)" class="form form-login">
    <!-- <label>Email:</label> -->
    <div class="input-wrapper">
      <input type="text" ng-model="email" autofocus autocomplete="off" autocorrect="off" autocapitalize="off" spellcheck="false" placeholder="Email">
    </div>
    <!-- <label>Password:</label> -->
    <div class="input-wrapper">
      <input type="password" ng-model="password" placeholder="Password">
    </div>
    <p><button class="btn btn-green" type="submit">Login</button></p>
  </form>
  <p><a href="/create-account">Create an Account</a></p>
</div>
